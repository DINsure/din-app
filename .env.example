# DIN (Dinyk) - Decentralized Insurance Platform
# Environment Variables Configuration

# Since .env is gitignored, you can use .env.example to build a new `.env` file when you clone the repo.
# Keep this file up-to-date when you add new variables to `.env`.
# This file will be committed to version control, so make sure not to have any secrets in it.

# ============================================
# NETWORK SELECTION
# ============================================

# Network environment: "mainnet" or "testnet"
NEXT_PUBLIC_NETWORK_ENV=mainnet

# ============================================
# KAIA NETWORK CONFIGURATION
# ============================================

# Mainnet Configuration
# Chain ID: 8217
# RPC URLs:
# - https://public-en.node.kaia.io (Public node)
# - https://archive-en.node.kaia.io (Archive node)
# - https://rpc.ankr.com/klaytn (Ankr RPC)

# Testnet (Kairos) Configuration
# Chain ID: 1001
# RPC URL: https://public-en-kairos.node.kaia.io

# These will be auto-configured based on NEXT_PUBLIC_NETWORK_ENV
# Override only if you need custom values
NEXT_PUBLIC_CHAIN_ID=
NEXT_PUBLIC_RPC_URL=

# ============================================
# SMART CONTRACT ADDRESSES
# ============================================
# Deploy your own contracts or use these mock addresses for development
# Separate addresses for mainnet and testnet

# Mainnet Contracts
NEXT_PUBLIC_MAINNET_INSURANCE_CONTRACT=0x742d35Cc64C9b16b2E4517b44b6BBAe6C4e3b5C5
NEXT_PUBLIC_MAINNET_TREASURY_CONTRACT=0x9f1B8F0A8aA8A8aA8A8aA8A8aA8A8aA8A8aA8A8a
NEXT_PUBLIC_MAINNET_TRANCHE_POOL_CONTRACT=0x1234567890abcdef1234567890abcdef12345678
NEXT_PUBLIC_MAINNET_ORACLE_ROUTER_CONTRACT=

# Testnet Contracts (Kairos)
NEXT_PUBLIC_TESTNET_INSURANCE_CONTRACT=0xTestInsuranceContract123456789012345678
NEXT_PUBLIC_TESTNET_TREASURY_CONTRACT=0xTestTreasuryContract1234567890123456789
NEXT_PUBLIC_TESTNET_TRANCHE_POOL_CONTRACT=0xTestTranchePool12345678901234567890123
NEXT_PUBLIC_TESTNET_ORACLE_ROUTER_CONTRACT=

# ============================================
# DEVELOPMENT FLAGS
# ============================================

# Enable testnet features (set to false for production)
NEXT_PUBLIC_ENABLE_TESTNETS=true

# Show debug information in the UI (set to false for production)
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# ============================================
# ORACLE CONFIGURATION (Optional)
# ============================================

# Primary oracle endpoint for price feeds
NEXT_PUBLIC_ORACLE_PRIMARY_URL=

# Fallback oracle endpoint
NEXT_PUBLIC_ORACLE_FALLBACK_URL=

# Oracle API key (if required)
ORACLE_API_KEY=

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

# Enable liquidity provision feature
NEXT_PUBLIC_ENABLE_LIQUIDITY_PROVISION=true

# Enable insurance purchase feature
NEXT_PUBLIC_ENABLE_INSURANCE_PURCHASE=true

# Enable portfolio management
NEXT_PUBLIC_ENABLE_PORTFOLIO=true

# Enable staking rewards
NEXT_PUBLIC_ENABLE_STAKING=false

# ============================================
# WALLET CONFIGURATION (Optional)
# ============================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Supported wallet types (comma-separated: metamask,kaia,walletconnect)
NEXT_PUBLIC_SUPPORTED_WALLETS=metamask,kaia

# ============================================
# API ENDPOINTS (Optional - for future backend)
# ============================================

# Backend API URL (if implementing hybrid architecture)
NEXT_PUBLIC_API_URL=

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Vercel environment variables (auto-populated)
VERCEL_URL=
VERCEL_ENV=development

# Node environment
NODE_ENV=development
