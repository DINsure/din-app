# DIN (Dinyk) - Decentralized Insurance Platform
# Environment Variables Configuration

# Since .env is gitignored, you can use .env.example to build a new `.env` file when you clone the repo.
# Keep this file up-to-date when you add new variables to `.env`.
# This file will be committed to version control, so make sure not to have any secrets in it.

# ============================================
# NETWORK SELECTION
# ============================================

# Network environment: "mainnet" or "testnet"
NEXT_PUBLIC_NETWORK_ENV=mainnet

# ============================================
# DEVELOPMENT FLAGS
# ============================================

# Enable testnet features (set to false for production)
NEXT_PUBLIC_ENABLE_TESTNETS=true

# Show debug information in the UI (set to false for production)
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# ============================================
# ORACLE CONFIGURATION (Optional)
# ============================================

# Primary oracle endpoint for price feeds
NEXT_PUBLIC_ORACLE_PRIMARY_URL=

# Fallback oracle endpoint
NEXT_PUBLIC_ORACLE_FALLBACK_URL=

# Oracle API key (if required)
ORACLE_API_KEY=

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

# Enable liquidity provision feature
NEXT_PUBLIC_ENABLE_LIQUIDITY_PROVISION=true

# Enable insurance purchase feature
NEXT_PUBLIC_ENABLE_INSURANCE_PURCHASE=true

# Enable portfolio management
NEXT_PUBLIC_ENABLE_PORTFOLIO=true

# Enable staking rewards
NEXT_PUBLIC_ENABLE_STAKING=false

# ============================================
# WALLET CONFIGURATION (Optional)
# ============================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Supported wallet types (comma-separated: metamask,kaia,walletconnect)
NEXT_PUBLIC_SUPPORTED_WALLETS=metamask,kaia

# ============================================
# API ENDPOINTS (Optional - for future backend)
# ============================================

# Backend API URL (if implementing hybrid architecture)
NEXT_PUBLIC_API_URL=

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================

# Vercel environment variables (auto-populated)
VERCEL_URL=
VERCEL_ENV=development

# Node environment
NODE_ENV=development
